// Definir una nueva colección
db.createCollection("nombre");

db.createCollection("personas", {
	validator: { $and:
		[
			{ nombre: {$type: "string"} },
			{ sexo: {$in: ["M", "F"]} },
			{ email:{$regex:/@/} },
			{ telefono: {$exists:false} }
		]
	}
});

